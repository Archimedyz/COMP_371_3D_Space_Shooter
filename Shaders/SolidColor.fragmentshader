#version 330 core

// Ouput to fragment shader
out vec4 color;

in vec2 vTexCoord;

uniform sampler2D gSampler;
uniform vec4 vColor;

void main()
{
	// set the fragment color to the interpolated vertex color
	//color = v_color.rgb;

    vec4 vTexColor = texture(gSampler, vTexCoord);

    vec4 vMixedColor = vTexColor * vColor;

    color = vec4(1,1,1,1);
}